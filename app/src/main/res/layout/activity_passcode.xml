<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PasscodeActivity"
    android:weightSum="4">

    <TextView
        android:id="@+id/promptText"
        style="@style/passcode_text"
        android:textSize="25sp"
        android:text="Enter passcode..."/>

    <TextView
        android:id="@+id/passcodeText"
        style="@style/passcode_text"
        android:textSize="50sp"
        android:inputType="numberPassword"
        android:text="1234"
        android:visibility="gone"/>

    <FrameLayout
        style="@style/passcode_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TableLayout
            style="passcode_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow style="@style/passcode_row">
                <Button
                    android:id="@+id/b1"
                    style="@style/passcode_button"
                    android:text="1"/>
                <Button
                    android:id="@+id/b2"
                    style="@style/passcode_button"
                    android:text="2"/>
                <Button
                    android:id="@+id/b3"
                    style="@style/passcode_button"
                    android:text="3"/>
            </TableRow>

            <TableRow style="@style/passcode_row">
                <Button
                    android:id="@+id/b4"
                    style="@style/passcode_button"
                    android:text="4"/>
                <Button
                    android:id="@+id/b5"
                    style="@style/passcode_button"
                    android:text="5"/>
                <Button
                    android:id="@+id/b6"
                    style="@style/passcode_button"
                    android:text="6"/>
            </TableRow>

            <TableRow style="@style/passcode_row">
                <Button
                    android:id="@+id/b7"
                    style="@style/passcode_button"
                    android:text="7"/>
                <Button
                    android:id="@+id/b8"
                    style="@style/passcode_button"
                    android:text="8"/>
                <Button
                    android:id="@+id/b9"
                    style="@style/passcode_button"
                    android:text="9"/>
            </TableRow>

            <TableRow style="@style/passcode_row">
                <ImageButton
                    android:id="@+id/delete"
                    style="@style/passcode_button"
                    android:src="@drawable/ic_backspace_white_48dp"/>
                <Button
                    android:id="@+id/b0"
                    style="@style/passcode_button"
                    android:text="0"/>
                <ImageButton
                    android:id="@+id/enter"
                    style="@style/passcode_button"
                    android:src="@drawable/ic_done_white_48dp"/>
            </TableRow>

        </TableLayout>

    </FrameLayout>

</LinearLayout>

